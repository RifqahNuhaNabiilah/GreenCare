<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantInformation">
    <ImageView
        android:id="@+id/_7609daadd5384c80ba3b612a3017bf7c_1"
        android:src="@drawable/_7609daadd5384c80ba3b612a3017bf7c_1"
        android:contentDescription="background_menu"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView android:id="@+id/back"
        android:src="@drawable/desain_tanpa_judul__1__1"
        android:contentDescription="desain_tanpa_judul__1__1"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/lily"
        android:layout_width="500dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/peace_lily_string"
        android:textColor="@color/lavender_color"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/tn4_width_800_1"
        android:layout_width="148dp"
        android:layout_height="137dp"
        android:contentDescription="tn4_width_800_1"
        android:src="@drawable/tn4_width_800_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lily"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/_rectangle_info"
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/_rectangle_3_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lily"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/info"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/_bg__utama_ek2_color"
        android:layout_width="200dp"
        android:layout_height="380dp"
        android:text="@string/infoLily"
        app:layout_constraintTop_toTopOf="@id/_rectangle_info"
        app:layout_constraintBottom_toBottomOf="@id/_rectangle_info"
        app:layout_constraintEnd_toEndOf="@id/_rectangle_info"
        app:layout_constraintStart_toStartOf="@id/_rectangle_info"

        />

    <ImageButton
        android:id="@+id/_rectangle_2"
        android:background="@drawable/_rectangle_4_shape"
        android:layout_marginTop="100dp"
        android:layout_width="327dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/_rectangle_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:id="@+id/backMenu"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/_bg__utama_ek2_color"
        android:layout_width="200dp"
        android:layout_height="25.4dp"
        android:text="@string/back_menu"
        app:layout_constraintTop_toTopOf="@id/_rectangle_2"
        app:layout_constraintBottom_toBottomOf="@id/_rectangle_2"
        app:layout_constraintEnd_toEndOf="@id/_rectangle_2"
        app:layout_constraintStart_toStartOf="@id/_rectangle_2"

        />


</androidx.constraintlayout.widget.ConstraintLayout>